# Erlang version
# erlang_version=18.2.1

# Elixir version
# elixir_version=1.2.0

# Always rebuild from scratch on every deploy?
always_rebuild=true

# Export heroku config vars
config_vars_to_export=(DATABASE_URL GITHUB_CLIENT_ID GITHUB_CLIENT_SECRET AWS_ACCESS_KEY_ID AWS_SECRET_ACCESS_KEY)

# A command to run right before compiling the app (after elixir, .etc)
# pre_compile="pwd"

# A command to run right after compiling the app
post_compile="mix phoenix.digest"

# Set the path the app is run from
runtime_path=/app
